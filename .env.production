# Production Environment Variables for Namamy.com

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_BASE_URL=https://namamy.com
PORT=3000

# Database Configuration
DATABASE_URL="postgresql://namamy_user:strong_password_here@localhost:5432/namamy_production?schema=public"
DIRECT_URL="postgresql://namamy_user:strong_password_here@localhost:5432/namamy_production?schema=public"

# Authentication
NEXTAUTH_SECRET="your-super-secure-nextauth-secret-key-production-namamy"
NEXTAUTH_URL="https://namamy.com"
JWT_SECRET="your-jwt-secret-key-for-namamy-production"

# Email Configuration (Hostinger SMTP)
SMTP_HOST="smtp.hostinger.com"
SMTP_PORT="587"
SMTP_USER="contact@namamy.com"
SMTP_PASS="your-hostinger-email-password"
SMTP_FROM="Namamy <contact@namamy.com>"

# Payment Configuration (for future integration)
# RAZORPAY_KEY_ID="your_razorpay_key_id"
# RAZORPAY_KEY_SECRET="your_razorpay_key_secret"

# File Upload Configuration
UPLOAD_DIR="./public/images/products/uploads"
MAX_FILE_SIZE="5242880"
ALLOWED_FILE_TYPES="image/jpeg,image/jpg,image/png,image/webp"

# Security Configuration
ADMIN_SECRET_KEY="your-admin-secret-key-for-namamy"
COOKIE_SECRET="your-cookie-secret-key-namamy-production"

# Analytics (optional)
# GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Redis (if using for caching)
# REDIS_URL="redis://localhost:6379"

# Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_INTERVAL="24h"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="/var/log/namamy/application.log"

# Domain Configuration
ALLOWED_ORIGINS="https://namamy.com,https://www.namamy.com"
CORS_ORIGIN="https://namamy.com"

# SSL Configuration
FORCE_HTTPS=true
SSL_CERT_PATH="/etc/ssl/certs/namamy.com.crt"
SSL_KEY_PATH="/etc/ssl/private/namamy.com.key"